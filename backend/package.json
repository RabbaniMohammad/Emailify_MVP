  "scripts": {
    "build": "tsc && tsc-alias",
    "build:dev": "tsc -p .",
    "clean-install": "rm -rf ./node_modules && rm -r package-lock.json && npm i",
    "dev": "cross-env NODE_ENV=development nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
    "dev:hot": "nodemon --exec \"npm run dev\" --watch ./src --ext .ts",
    "lint": "eslint .",
    "start": "node -r tsconfig-paths/register dist/index.js",
    "test": "NODE_ENV=test vitest",
    "type-check": "tsc --noEmit",
    "cleanup:users": "ts-node -r tsconfig-paths/register scripts/cleanup-duplicate-users.ts",
    "verify:org": "ts-node -r tsconfig-paths/register scripts/verify-organization-data.ts"
  },
