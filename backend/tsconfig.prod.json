{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],                        
    "strict": true,
    "baseUrl": "./",
    "outDir": "dist",
    "esModuleInterop": true,                 
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@src/*": ["src/*"]
    },
    "moduleResolution": "node10",
    "resolveJsonModule": true,
    "useUnknownInCatchVariables": false,
    "sourceMap": false,
    "removeComments": true,
    "allowImportingTsExtensions": false
  },
  "include": [
    "src/**/*.ts",
    "config.ts"
  ],
  "exclude": [
    "tests",
    "src/public/",
    "scripts",
    "eslint.config.ts",
    "vitest.config.js"
  ]
}
